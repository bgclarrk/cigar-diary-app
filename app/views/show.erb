<div class="row">
    <div class="col-lg-12">
        <h1>Review Preview</h1>
        <hr>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 review">
        <% review = Review.find_by_id(params[:id]) %>

        <h3 class="text-center"><%= review.review_title %></h3>
        <h4 class="text-center"><%= review.review_cigar %> &nbsp; | &nbsp; Rating: <%= review.review_rating %> Stars</h4>
        <p class="text-center">Author: <%= current_user?.user_name %> &nbsp; | &nbsp; Published: <%= review.created_at %>
        <% if review.user_id == session[:user_id] %>
            &nbsp;  |  &nbsp;  <a href='/reviews/<%= review.id %>/edit'>Edit</a></p>
        <% end %>
        <hr>
        <p><%= review.review_description %></p>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <h3 class="text-center"><a href="/reviews">Return to Reviews</a></h3>
    </div>
</div>