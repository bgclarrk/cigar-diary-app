<div class="row">
    <div class="col-lg-12">
        <h1>Welcome Back to Cigar Diaries</h1>
        <hr>
        <h3>Log in below or <a href="/">signup here</a>!</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <form action="/login" method="POST">
            <div class="form-group">
                <input type="email" class="form-control form-control-lg" id="user_email" name="user_email" placeholder="Email:" required>
            </div><br>
            <div class="form-group">
                <input type="password" class="form-control form-control-lg" id="password" name="password" placeholder="Password:" required>
            </div><br>
            <div class="form-group text-center">
                <input type="submit" id="submit" class="btn btn-primary btn-lg" value="Log In">
            </div
        </form>
        <% if !!flash[:alerts] %>
            <div class="alert alert-danger" role="alert">
                <h5 class="text-center"><%= flash[:alerts] %><h5>
            </div>
        <% end %>
    </div>
</div>